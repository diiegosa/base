<div class="row">
  <div class="card z-depth-4">
    <div class="card-content">
      <span class="card-title">
        <%= translate_module(model, :one) %>
        <small><%= translate_action(action) %></small>
      </span>
      <div class="card-action"></div>
      <%= form_with(model: object, local: true, class: "form-horizontal", html: { multipart: true }) do |form| %>


        <% fields.each do |field| %>
        <div class="input-field">
          <% if field[:kind] === :text_field %>
            <%= form.text_field field[:name], class: "validate #{field[:extra_class]}", id: field[:name] %>
            <label for="<%= field[:name] %>"><%= translate_attr(field[:name], model) %></label>
          <% elsif field[:kind] === :number_field %>
            <%= form.number_field field[:name], class: "form-control #{field[:extra_class]}", id: field[:name], step: field[:step] %>
            <label for="<%= field[:name] %>"><%= translate_attr(field[:name], model) %></label>
          <% elsif field[:kind] === :password_field %>
            <%= form.password_field field[:name], class: "#{field[:extra_class]} validate", id: field[:name] %>
            <label for="<%= field[:name] %>"><%= translate_attr(field[:name], model) %></label>
          <% elsif field[:kind] === :text_area %>
            <%= form.text_area field[:name], class: "materialize-textarea #{field[:extra_class]}", id: field[:name] %>
            <label for="<%= field[:name] %>"><%= translate_attr(field[:name], model) %></label>
          <% elsif field[:kind] === :select %>
            <%= form.select(field[:name], field[:collection], { class: "#{field[:extra_class]}" }) %>
            <label><%= translate_attr(field[:name], model) %></label>
          <% elsif field[:kind] === :multselect %>
            <%= form.select(field[:name], field[:collection], { class: "#{field[:extra_class]}", multiple: 'multiple' }) %>
            <label><%= translate_attr(field[:name], model) %></label>
          <% elsif field[:kind] === :file_field %>
            <div class="file-field input-field">
              <div class="btn">
                <span><%= translate_attr(field[:name], model) %></span>
                <input type="file">
              </div>
              <div class="file-path-wrapper">
                <input class="file-path validate" type="text">
              </div>
            </div>
            <% if object.send(field[:name]).present? %>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label"><%= translate_attr(field[:name], model) %> (download)</label>
              <div class="col-sm-9">
                <div class="col-sm-3">
                  <%= link_to "Clique para baixar o arquivo", object.send(field[:name]).url(:original, false), target: "_blank" %>
                </div>
                <div class="col-sm-1">
                  <%= render 'layouts/helpers/attachment_delete', attachment_name: field[:name].to_s %>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      <% end %>




      <% end %>
    </div>
  </div>
</div>


  