<%= render 'layouts/helpers/form_box',
  action: :new,
  model: :user,
  object: @user,
  model_path: users_path,
  btn_action: :create,
  fields: [
    {kind: :select, name: :profile_id, collection: @profiles.collect {|p| [ p.name, p.id ]}, extra_class: ''},
    {kind: :text_field, name: :name, extra_class: ''},
    {kind: :text_field, name: :email, extra_class: ''},
    {kind: :password_field, name: :password, extra_class: ''},
  ] %>
